{{!-- jumbotron container --}}
<div class="container">
    <div class="jumbotron">
        <h1 class="display">Gandalf's Burgers</h1>
        <h3>Help us create our future menu by adding your idea below:</h3>
    </div>

    {{!-- <h1> Burgers </h1> --}}
    <div class="col-md-4 card-img-top">
    {{!-- <h2 class = "card-img-top">Burger Available:</h2> --}}
        <h2>Burgers Available:</h2>
        <ul>
            {{#each burger}}
              {{#unless devour}}
               {{!-- devoured state. On the non devour block, this button
               set devour = true; so when someone click on it
               that means someone clicked it, and clicking it means
               set the devour state to true. in the index view, burger
               who has the devour state = true will be displayed
               under another segment below which #IF devour = true  --}}
                {{> burger/burger-block devour = true}}
              {{/unless}}
            {{/each}}
        </ul>
    </div>

    {{!-- Menu centerpiece --}}
    <div class="col-md-4 card-body">
        <h2 class = "card-body">Add a Burger:</h2>
        <img src="/assets/css/GandalfBurger.jpg" id="menu">
          <form class="create-form">
              <div class="form-group">
                <label for="addBurger">Burger Name:</label>
                <input type="text" size=20 id="addBurger" name="name">
                <button type="submit" class="btn btn-info">Add Burger!</button>
              </div>
              
          </form>
    </div>


{{!-- List of burgers added --}}
  <div class="col-md-4">
    <h2 class="card-img-top">Burgers Devoured: </h2>
    <ul>
      {{#each burger}}
        {{#if devour}}
            <li>
            {{!-- Display the name of burger --}}
            {{!-- {{name}} --}}
             {{> burger/burger-delete}}
            </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>

 </div>
